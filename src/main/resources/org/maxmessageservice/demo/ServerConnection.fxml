<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.maxmessageservice.demo.ServerConnectionController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Server IP:"/>
    <TextField fx:id="ipField" GridPane.columnIndex="1"/>
    <Label text="Port:" GridPane.rowIndex="1"/>
    <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="Connect" onAction="#connectToServer" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.maxmessageservice.demo.MessageDetailsController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Message Details" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <TextArea fx:id="messageDetails" GridPane.rowIndex="1" GridPane.columnSpan="2" editable="false"/>
    <Button text="Close" onAction="#closeWindow" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>